# Database (use o endereço do seu PostgreSQL existente)
DATABASE_URL=postgresql://username:password@your-postgres-host:5432/crm_evolution

# JWT (mude para uma chave segura)
JWT_SECRET=your-super-secret-jwt-key-here-change-this
JWT_EXPIRES_IN=7d

# URLs do seu domínio
DOMAIN=crm.yourdomain.com
CLIENT_URL=https://crm.yourdomain.com
API_BASE_URL=https://crm.yourdomain.com
WEBHOOK_BASE_URL=https://crm.yourdomain.com/api/webhooks/evolution
REACT_APP_API_URL=https://crm.yourdomain.com

# Evolution API
EVOLUTION_API_URL=http://your-evolution-api-server:8080
EVOLUTION_API_KEY=your-evolution-api-key

# File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Redis (opcional para cache)
REDIS_URL=redis://your-redis-server:6379

# Email (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Webhook
WEBHOOK_SECRET=your-webhook-secret
